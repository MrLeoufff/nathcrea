{% extends 'base.html.twig' %}

{% block title %}User Index
{% endblock %}

{% block body %}
	<div class="container py-4">
		<h1 class="text-center mb-4">Liste des Utilisateurs</h1>

		{% if users|length > 0 %}
			<!-- Responsive Table for Larger Screens -->
			<div class="table-responsive d-none d-md-block">
				<table class="table table-striped table-hover shadow-sm">
					<thead class="table-primary">
						<tr>
							<th>Pseudo</th>
							<th>Email</th>
							<th>Prénom</th>
							<th>Nom</th>
							<th>Vérifié</th>
							<th>Créé le</th>
							<th>Adresse</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.pseudo }}</td>
								<td>{{ user.email }}</td>
								<td>{{ user.firstname }}</td>
								<td>{{ user.lastname }}</td>
								<td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
								<td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '-' }}</td>
								<td>{{ user.address }}</td>
								<td>
									<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Voir</a>
									<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			<!-- Cards for Mobile -->
			<div class="d-block d-md-none">
				{% for user in users %}
					<div class="card mb-3 shadow-sm">
						<div class="card-body">
							<h5 class="card-title">{{ user.pseudo }}</h5>
							<p class="card-text">
								<strong>Email :</strong>
								{{ user.email }}</p>
							<p class="card-text">
								<strong>Prénom :</strong>
								{{ user.firstname }}</p>
							<p class="card-text">
								<strong>Nom :</strong>
								{{ user.lastname }}</p>
							<p class="card-text">
								<strong>Vérifié :</strong>
								{{ user.isVerified ? 'Oui' : 'Non' }}</p>
							<p class="card-text">
								<strong>Créé le :</strong>
								{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '-' }}</p>
							<p class="card-text">
								<strong>Adresse :</strong>
								{{ user.address }}</p>
							<div class="d-flex justify-content-between">
								<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Voir</a>
								<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<div class="alert alert-warning text-center">Aucun utilisateur trouvé.</div>
		{% endif %}

		<!-- Bouton pour créer un nouvel utilisateur -->
		<div class="text-center mt-4">
			<a href="{{ path('app_user_new') }}" class="btn btn-primary">
				<i class="fas fa-user-plus me-2"></i>Créer un nouvel utilisateur
			</a>
		</div>
	</div>
{% endblock %}
