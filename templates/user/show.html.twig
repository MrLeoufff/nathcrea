{% extends 'base.html.twig' %}

{% block title %}User -
	{{ user.pseudo }}
{% endblock %}

{% block body %}
	<div class="container py-4">
		<h1 class="text-center mb-4">Détails de l'utilisateur</h1>

		<!-- Table for larger screens -->
		<div class="table-responsive d-none d-md-block">
			<table class="table table-striped table-hover shadow-sm">
				<tbody>
					<tr>
						<th>Pseudo</th>
						<td>{{ user.pseudo }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Prénom</th>
						<td>{{ user.firstname }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ user.lastname }}</td>
					</tr>
					<tr>
						<th>Adresse</th>
						<td>{{ user.address }}</td>
					</tr>
					<tr>
						<th>Vérifié</th>
						<td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
					</tr>
					<tr>
						<th>Créé le</th>
						<td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '-' }}</td>
					</tr>
				</tbody>
			</table>
		</div>

		<!-- Card for smaller screens -->
		<div class="d-block d-md-none">
			<div class="card shadow-sm mb-3">
				<div class="card-body">
					<h5 class="card-title">Informations de l'utilisateur</h5>
					<p>
						<strong>Pseudo :</strong>
						{{ user.pseudo }}</p>
					<p>
						<strong>Email :</strong>
						{{ user.email }}</p>
					<p>
						<strong>Prénom :</strong>
						{{ user.firstname }}</p>
					<p>
						<strong>Nom :</strong>
						{{ user.lastname }}</p>
					<p>
						<strong>Adresse :</strong>
						{{ user.address }}</p>
					<p>
						<strong>Vérifié :</strong>
						{{ user.isVerified ? 'Oui' : 'Non' }}</p>
					<p>
						<strong>Créé le :</strong>
						{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '-' }}</p>
				</div>
			</div>
		</div>

		<!-- Actions -->
		<div class="text-center mt-4">
			<a href="{{ path('app_user_index') }}" class="btn btn-secondary me-2">
				<i class="fas fa-arrow-left me-1"></i>Retour à la liste
			</a>
		</div>
	</div>
{% endblock %}
