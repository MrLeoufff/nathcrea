{% extends 'base.html.twig' %}

{% block title %}Détail - {{ product.name }}{% endblock %}

{% block body %}
    <h1>{{ product.name }}</h1>
    <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="img-fluid mb-4">
    <p>{{ product.description }}</p>
    <p><strong>{{ product.price|number_format(2, ',', ' ') }} €</strong></p>

    {% if app.user %}
        <a href="{{ path('app_order_product', { id: product.id }) }}" class="btn btn-success">Commander</a>
    {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-primary">Connectez-vous pour commander</a>
    {% endif %}
{% endblock %}
